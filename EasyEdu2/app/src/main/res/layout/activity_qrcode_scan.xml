<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/background"
        android:orientation="vertical"
        tools:context=".QRCodeScan">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="20dp"
              android:paddingBottom="40dp"
              android:paddingLeft="0dp"
              android:textColor="@color/white"
              android:text="RECOMENDAÇÃO:"
    />
    <TextView android:layout_width="310dp" android:layout_height="wrap_content"
              android:textSize="20dp"
              android:paddingBottom="40dp"
              android:paddingLeft="30dp"
              android:textColor="@color/white"
              android:text="Você tem até o final da aula para responder a chamada!\n\nNÃO TENTE FAZER ISSO DE CASA! "
    />

    <Button
            android:text="Responder Chamada"
            android:textColor="@color/white"
            android:background="@drawable/buttongradient"
            android:layout_width="225dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="256dp"
            tools:layout_editor_absoluteX="176dp" android:id="@+id/btn_scan" tools:ignore="MissingConstraints"/>
</LinearLayout>