<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/login_background"
        android:orientation="vertical"
        tools:context=".chamada.QRCodeScan">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20dp"
              android:paddingBottom="40dp"
              android:paddingLeft="0dp"
              android:textColor="@color/white"
              android:text="RECOMENDAÇÃO:"
    />
    <TextView android:layout_width="310dp"
              android:layout_height="wrap_content"
              android:textSize="20dp"
              android:paddingBottom="40dp"
              android:paddingLeft="30dp"
              android:textColor="@color/white"
              android:text="Você tem até o final da aula para responder a chamada!\n\nNÃO TENTE FAZER ISSO DE CASA! "
    />

    <Button
            android:id="@+id/btn_scan"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Responder Chamada"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="21sp"
            android:layout_marginBottom="10dp"/>


</LinearLayout>