<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background"
        tools:context=".MainActivity">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/safapedro"
              android:text="PERFIL"
              android:textColor="@color/white"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/safapedro2"
              android:text="O que vocÃª deseja fazer?"
              android:textColor="@color/white"
    />

    <Button
            android:text="Alguma coisa"
            android:textColor="@color/white"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/buttongradient"
            android:layout_marginVertical="30dp"
            android:id="@+id/btn_"/>

    <Button android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_create_qr"
            android:background="@drawable/buttongradient"
            android:textColor="@color/white"
            android:text="Gerar QR Code"
    />

    <Button android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_posts"
            android:text="Posts"
            android:layout_marginVertical="30dp"
            android:background="@drawable/buttongradient"
            android:textColor="@color/white"/>

    <Button android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_turmas"
            android:text="Criar Turmas"
            android:background="@drawable/buttongradient"
            android:textColor="@color/white"/>
    <Button
            android:text="Fazer Logout"
            android:textColor="@color/white"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/buttongradient"
            android:layout_marginVertical="30dp"
            android:id="@+id/btn_logout"/>
</LinearLayout>