<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/ic_launcher"
        tools:context=".MainActivity">


    <TextView
            android:text="Email"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:id="@+id/textView20"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="15"
            android:id="@+id/EmailInput"/>
    <TextView
            android:text="Senha"
            android:textSize="24dp"
            android:textColor="@color/colorAccent"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
           />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:ems="15"
            android:id="@+id/SenhaInput"/>
    <TextView
            android:text="Confirmar Senha"
            android:textSize="24dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:id="@+id/textView212"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:ems="15"
            android:id="@+id/conf_senh"/>
    <Button
            android:text="Cadastrar"
            android:textColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            android:id="@+id/btn_cadastr"/>
    <Button
            android:id="@+id/btn_bac"
            android:text="Voltar"
            android:textColor="@color/colorPrimary"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            />
    <TextView
            android:text="Perfil"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            />
    <CheckBox
            android:text="Aluno"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="70dp"
            android:layout_height="wrap_content" android:id="@+id/btnAluno"/>
    <CheckBox
            android:text="Professor"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="70dp"

            android:layout_height="wrap_content" android:id="@+id/btnProfessor"/>



</LinearLayout>