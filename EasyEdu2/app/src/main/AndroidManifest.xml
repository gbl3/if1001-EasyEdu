<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.easyedu">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/pcbook"
            android:label="EasyEdu"
            android:roundIcon="@mipmap/pcbook"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".chamada.finalChamada">
        </activity>
        <activity android:name=".chamada.geolocalizacao.LocalActivity">
        </activity>
        <activity android:name=".turmas.ExibeTurmaActivity">
        </activity>
        <activity
                android:name=".HomeActivity"
                android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".perfil.PerfilActivity"
                android:theme="@style/LoginTheme">
        </activity>
        <activity android:name=".prova.questoes.InserirQuestaoActivity">
        </activity>
        <activity android:name=".prova.ProvaActivity">
        </activity>
        <activity android:name=".chamada.QRCodeGenerator"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".prova.AdicionarProvaActivity">
        </activity>
        <activity android:name=".prova.ExibeProvaActivity">
        </activity>
        <activity android:name=".chamada.QRCodeScan"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".chamada.geolocalizacao.MostrarPresencas"/>
        <activity android:name=".turmas.AdicionarTurmaActivity"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".posts.AdicionarPostActivity"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".posts.PostsActivity"
                android:label="@string/title_activity_turmas"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".turmas.TurmasActivity"
                android:label="@string/title_activity_turmas"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity
                android:name=".autenticacao.CadastroActivity"
                android:theme="@style/LoginTheme">
        </activity>
        <activity
                android:name=".autenticacao.LoginActivity"
                android:theme="@style/LoginTheme"/>
        <activity android:name=".chamada.geolocalizacao.Transicao"/>
    </application>

</manifest>