            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".QRCodeGenerator">
        </activity>
        <activity android:name=".QRCodeScan">
        </activity>
        <activity android:name=".AdicionarTurmaActivity"> </activity>
        <activity
                android:name=".TurmasActivity"
                android:label="@string/title_activity_turmas"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.login.LoginActivity"
                android:label="@string/title_activity_login">
        </activity>
        <activity android:name=".MainActivity">

        </activity>
        <activity android:name=".CadastroActivity"/>
